<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnsMenu" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:background">@drawable/forme</item>
        <item name="android:textColor">#070707</item>
    </style>

    <style name="FrontBtn" parent="android:Widget.Button">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">#8BC34A</item>
        <item name="android:textColor">#009688</item>
    </style>
    <style name="Edit" parent="android:Widget.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">10sp</item>
        <item name="android:background">#EDF4FA</item>
        <item name="android:textColor">#0E0E0E</item>
        <item name="android:gravity">left</item>
    </style>
</resources>